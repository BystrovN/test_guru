<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(url: feedback_path, method: :post) do |form| %>
      <div class="form-group">
        <%= form.label :feedback, t('feedback.label') %>
        <%= form.text_area :feedback, class: 'form-control', rows: 3, required: true %>
      </div>
      <%= form.submit t('feedback.send') %>
    <% end %>
  </div>
</div>
