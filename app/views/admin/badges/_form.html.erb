<%= form_with(model: badge, url: badge.persisted? ? admin_badge_path(badge) : admin_badges_path, method: badge.persisted? ? :patch : :post) do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>

  <div class="field">
    <%= form.label :rule_type, t('.rule_type') %>
    <%= form.select :rule_type, BadgeRule::RuleTypes.constants.map { |c| BadgeRule::RuleTypes.const_get(c) } %>
  </div>
  
  <div class="field">
    <%= form.label :badge_rule_condition, t('.rule_condition') %>
    <%= form.text_field :badge_rule_condition %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
