<h1><%= t('.header') %></h1>
<%= link_to t('links.add'), new_admin_test_path, class: "btn btn-primary" %>
<%= render 'shared/errors', resource: @test %>

<div class="container mt-4">
  <table class="table">
    <thead>
      <tr>
        <th class="sort-by-title pointer" style="text-align: center;" data-turbolinks="false">
          <%= t('.test_header') %>
          <%= octicon 'arrow-up', class: 'text-succes hide' %>
          <%= octicon 'arrow-down', class: 'text-succes hide' %>
        </th>
        <th style="text-align: center;"><%= t('.level') %></th>
        <th style="text-align: center;"><%= t('.questions_count') %></th>
        <th colspan="3" style="text-align: center;"><%= t('.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
</div>
